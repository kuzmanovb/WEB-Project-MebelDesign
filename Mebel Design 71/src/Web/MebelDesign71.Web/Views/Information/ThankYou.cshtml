
@{ this.ViewData["Title"] = "Thank You"; }

<div class="site-section services-1-wrap m-5">
    <div class="container">
        <div class="text-center border border-dark p-lg-5">
            <h3 class="m-3">Благодаря ви за отделеното времето за да ни дадете обратна връзка.</h3>
            <span id="timer">
            </span>
        </div>
    </div>
</div>


@section Scripts
{
    <script type="text/javascript">
        var count = 5;
        var redirect = "/Information/Reviews";

        function countDown() {
            var timer = document.getElementById("timer");
            if (count > 0) {
                count--;
                timer.innerHTML = "Вие ще бъдете пренасочени към страница с отзиви след" + " " + count + " секунди.";
                setTimeout("countDown()", 1000);
            } else {
                window.location.href = redirect;
            }
        }
        countDown();
    </script>
}