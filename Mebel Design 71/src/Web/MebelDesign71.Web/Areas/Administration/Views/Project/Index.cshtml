
@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Управление на категориите за проекти
            <small>тук маже да добавите, промените или изтриете категория </small>
        </h1>
        <ol class="breadcrumb"></ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Създай / Промени категория на проект</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="formTodo">
                        <div class="box-body">
                            <input type="hidden" id="id" name="id" />
                            <div class="form-group">
                                <label>Име</label>
                                <input class="form-control" id="todo" name="todo" placeholder="Тук въведете името на проекта">
                            </div>
                            <input type="hidden" id="id" name="id" />
                            <div class="form-group">
                                <label>Представяне на проекта</label>
                                <input class="form-control" id="todo" name="todo" placeholder="Въведете описание на проекта ...">
                            </div>

                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fa fa-paperclip"></i> Добави снимка
                                    <input type="file" name="attachment">
                                </div>
                                <p class="text-danger text-uppercase">При съдаване на категория задължително трябва да въведете снимка</p>
                            </div>


                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="button" id="Create" value="Създай" class="btn btn-success" onclick="CreateData()" />
                            <input type="button" id="Update" value="Промени" class="btn btn-info hidden" onclick="UpdateData()" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-md-6">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Всички проекти</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Проект</th>
                                    <th>Описание</th>
                                    <th>Активен</th>
                                    <th>Снимка</th>
                                    <th></th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>

    </section>
    <!-- /.content -->
</div>
@section Scripts{
<environment include="Development,Staging,Production">
    <script src="~/areas/crud/todo/index.js"></script>
</environment>
}

