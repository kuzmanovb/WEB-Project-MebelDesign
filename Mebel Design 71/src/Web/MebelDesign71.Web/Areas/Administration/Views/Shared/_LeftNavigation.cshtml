@using MebelDesign71.Web.HTMLHelpers

<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/adminlte/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Alexander Pierce</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>

        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
       
            <li class="@Html.IsSelected(controller: "Mailbox")">
                <a href="@Url.Action("Index", "Mailbox")">
                    <i class="fa fa-envelope"></i> <span>Поща</span>
                    <span class="pull-right-container">
                        <small class="label pull-right bg-yellow">12</small>
                        <small class="label pull-right bg-green">16</small>
                        <small class="label pull-right bg-red">5</small>
                    </span>
                </a>
            </li>

            <li class="@Html.IsSelected(controller: "Todo")">
                <a href="@Url.Action("Index", "Todo")">
                    <i class="fa fa-th"></i> <span>Todo</span>
                    <span class="pull-right-container">
                        <small class="label pull-right bg-green">CRUD</small>
                    </span>
                </a>
            </li>
        </ul>



       

    </section>
    <!-- /.sidebar -->
</aside>