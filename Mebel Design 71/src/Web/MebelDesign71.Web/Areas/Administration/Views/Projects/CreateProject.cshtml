@model MebelDesign71.Web.ViewModels.Projects.ProjectInputModel

@{this.ViewData["Title"] = "Create Project"; }
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Създай / Промени категория на проект</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-controller="Project" enctype="multipart/form-data">
                        <div class="box-body">
                            <input type="hidden" id="id" name="Id" />
                            <div class="form-group">
                                <label>Име</label>
                                <input class="form-control" id="todo" name="Name" placeholder="Тук въведете името на проекта">
                            </div>
                            <div class="form-group">
                                <label>Представяне на проекта</label>
                                <input class="form-control" id="todo" name="Description" placeholder="Въведете описание на проекта ...">
                            </div>
                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fa fa-paperclip"></i> Добави снимка
                                    <input type="file" name="attachment" id="todo">
                                </div>
                                <p class="text-danger text-uppercase">При съдаване на категория задължително трябва да въведете снимка</p>
                            </div>


                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="button" id="Create" value="Създай" class="btn btn-success" onclick="CreateData()" />
                            <input type="button" id="Update" value="Промени" class="btn btn-info hidden" onclick="UpdateData()" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
</div>