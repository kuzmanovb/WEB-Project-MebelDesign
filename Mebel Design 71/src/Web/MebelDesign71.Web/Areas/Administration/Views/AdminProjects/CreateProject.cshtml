@model MebelDesign71.Web.ViewModels.Projects.ProjectInputModel

@{this.ViewData["Title"] = "Create Project"; }
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Създай / Промени категория на проект</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-area="Administration" asp-controller="AdminProjects" asp-action="CreateProject" metod="post" enctype="multipart/form-data">
                        <div class="box-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="Тук въведете името на проекта">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <input asp-for="Description" class="form-control" placeholder="Въведете описание на проекта ">
                                <span asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fa fa-paperclip"></i> Добави снимка
                                    <input type="file" name="attachment">
                                    <input asp-for="HeadImage" />
                                    <span asp-validation-for="HeadImage" class="text-danger"></span>

                                </div>
                                <p class="text-danger text-uppercase">При съдаване на категория задължително трябва да въведете снимка</p>
                            </div>


                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            @if (Model == null)
                            {
                                <button type="submit" value="Създай" class="btn btn-success">Създай</button>
                                @*<input type="button" id="Create" value="Създай" class="btn btn-success" onclick="CreateData()" />*@
                            }
                            else
                            {
                                <input type="button" id="Update" value="Промени" class="btn btn-info hidden" onclick="UpdateData()" />
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
</div>